---
import '../styles/global.css';
const { title = 'Rapids Nordic', description = 'Rapids Nordic Ski Team - Training, Competition, Excellence', bodyClass = '' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
  </head>
  <body class={bodyClass}>
    <header>
      <div class="wrap">
        <h1>RAPIDS NORDIC</h1>
        <nav>
          <a href="/">Home</a>
          <a href="/calendar">Calendar</a>
          <a href="/announcements">News</a>
          <a href="/workouts">Training</a>
          <a href="/registration">Join</a>
        </nav>
      </div>
    </header>
    <slot name="hero" />
    <main class="wrap">
      <slot />
    </main>
    <footer>
      <p><strong>Rapids Nordic Ski Team</strong></p>
      <p>© {new Date().getFullYear()} • Grand Rapids, Minnesota</p>
    </footer>
  </body>
</html>
