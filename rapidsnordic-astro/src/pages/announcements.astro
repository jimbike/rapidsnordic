---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

// Get all announcements and filter to show only past or upcoming within a week
const allPosts = await getCollection('announcements', ({ data }) => !data.draft);
const today = new Date();
const oneWeekFromNow = new Date(today.getTime() + (7 * 24 * 60 * 60 * 1000));

const posts = allPosts
  .filter(post => {
    const postDate = post.data.date || new Date(0);
    // Show if in the past or within the next week
    return postDate <= oneWeekFromNow;
  })
  .sort((a,b) => b.data.date.getTime() - a.data.date.getTime());
---
<BaseLayout title="GRHS Nordic — Announcements">
  <section class="card">
    <h2>Announcements</h2>
    <p style="color: #666; font-size: 0.9rem; margin-bottom: 1rem;">
      <em>Showing announcements from the past week and upcoming events within the next 7 days</em>
    </p>
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/announcements/${post.slug}/`}>{post.data.title}</a>
          <span style="color:#6b7280"> — {post.data.date.toDateString()}</span>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
