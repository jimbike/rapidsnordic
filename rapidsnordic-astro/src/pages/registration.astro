---
import BaseLayout from "../layouts/BaseLayout.astro";
const registrationUrl = "https://students.arbitersports.com/programs/grand-rapids-high-school-robert-j-elkington-middle-school-athletic-registration-2025-2026";
---
<BaseLayout title="GRHS Nordic — Registration">
  <section class="card">
    <h2>Register for the 2025–2026 Season</h2>
    <p>Use the link below to complete GRHS athletics registration for Nordic. You may also scan the QR code.</p>
    <p><a class="button" href={registrationUrl} target="_blank" rel="noopener">Open Registration</a></p>
    <img src="/qr/registration.png" alt="Registration QR code" width="200" height="200"/>
    <p style="color:#6b7280">If the QR code doesn't load, the link above goes to the same place.</p>
  </section>
</BaseLayout>
