---
import BaseLayout from "../layouts/BaseLayout.astro";
const registrationUrl = "https://students.arbitersports.com/programs/grand-rapids-high-school-robert-j-elkington-middle-school-athletic-registration-2025-2026";
---
<BaseLayout title="Rapids Nordic - Registration">
  <section class="card text-center">
    <h2>2025-2026 Team Registration</h2>
    <p>Ready to join Grand Rapids Nordic Team? Complete your registration through the GRHS athletics portal.</p>
    
    <div class="mt-2 mb-2">
      <a class="button" href={registrationUrl} target="_blank" rel="noopener">
        Register Online
      </a>
    </div>
    
    <p>Or scan this QR code with your phone:</p>
    <img src="/qr/registration.png" alt="Registration QR code" width="200" height="200" style="margin: 1rem auto;"/>
  </section>

  <div class="grid">
    <section class="card">
      <h3>Perks</h3>
      <ul>
        <li>Dedicated Coaching</li>
        <li>Race entry fees</li>
        <li>Race uniform</li>
      </ul>
    </section>

    <section class="card">
      <h3>Training Program</h3>
      <ul>
        <li>Technique development</li>
        <li>Strength training</li>
        <li>Race preparation</li>
      </ul>
    </section>

    <section class="card">
      <h3>Contact Info</h3>
      <p><strong>Questions?</strong></p>
      <p>Email: <a href="mailto:james.bujold@gmail.com">james.bujold@gmail.com</a></p>
      <p><strong>Head Coach: James Bujold</strong></p>
    </section>
  </div>
</BaseLayout>
